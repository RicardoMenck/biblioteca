root = true

# Configurações gerais para todos os arquivos
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Configurações específicas para Java (garantia extra)
[*.java]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false